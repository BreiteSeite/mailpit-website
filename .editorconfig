root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 1000

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
indent_style = space

[*.{html,ss,js}]
indent_size = 2
indent_style = tab

[*.{less,css,scss}]
indent_size = 2
indent_style = space
